package dec19_simple_program;

// count the even and odd number 

import java.util.Scanner;

public class CountOddEven 
  {
	  
	  public static void main(String[] args) 
	  {
		  Scanner sc = new Scanner(System.in);
		  
		  int[] a;
		  System.out.println("Enter the Array size : ");
		  int size = sc.nextInt();
		  int[] arr = new int[size];
		  System.out.println("Enter "+size+"element in array : ");
		  for(int i=0;i<arr.length;i++)
		  {
			  arr[i] = sc.nextInt();

			 // System.out.println(arr[i]);
		  }
		  
		  int evenCount = 0, oddCount = 0;

		  for(int i=0; i<arr.length; i++)
			{
				if(arr[i] % 2 == 0)
				{
					evenCount++;
				}
				else
				{ 
					oddCount++;
				}
			}

		  System.out.println("\nArray all even element count: "+ evenCount);
			System.out.println("Array all odd element count: "+ oddCount);
		}

		  
		  
	  }
  
